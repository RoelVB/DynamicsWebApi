{
	"compilerOptions": {
		"noImplicitAny": false,
		"declaration": true,
		"declarationMap": true,
		"sourceMap": true,
		"esModuleInterop": true,
		"noEmitOnError": true,
		"removeComments": false,
		"isolatedModules": true,
		"forceConsistentCasingInFileNames": true,
		"allowJs": false,
		"skipLibCheck": true,
		"noUnusedLocals": false,
   	 	"noUnusedParameters": false,
		"moduleResolution": "node",
		"module": "CommonJS",
		"outDir": "lib",
		"target": "ES6",
		"lib": ["ESNext", "DOM"],
		"strict": true,
	},
	// "compileOnSave": true,
	"include": ["./src/**/*"],
	"exclude": ["node_modules", "typesold", "./tests/"]
}
